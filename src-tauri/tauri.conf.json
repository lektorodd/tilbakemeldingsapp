{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MatteMonitor",
  "version": "0.9.2",
  "identifier": "no.lektorodd.mattemonitor",
  "build": {
    "frontendDist": "./dist",
    "devUrl": "http://localhost:3333",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "bash src-tauri/build-server.sh"
  },
  "app": {
    "windows": [
      {
        "title": "MatteMonitor",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "server/**/*"
    ]
  }
}